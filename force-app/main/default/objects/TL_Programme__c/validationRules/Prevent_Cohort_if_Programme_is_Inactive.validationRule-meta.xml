<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Prevent_Cohort_if_Programme_is_Inactive</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISNEW() ,RecordType.DeveloperName == &quot;Cohort&quot;,OR(ISPICKVAL( Programme_Definition__r.Status__c ,&quot;Inactive&quot;),ISPICKVAL( Programme_Definition__r.Status__c ,&quot;Complete&quot;)))</errorConditionFormula>
    <errorMessage>You cannot create Cohort if Programme Definition is Inactive or Complete.</errorMessage>
</ValidationRule>
